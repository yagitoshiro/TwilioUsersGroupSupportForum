<p id="notice"><%= notice %></p>

<%= form_for(@user, url: {controller: :reset_password, action: :update}, html: {class: 'form'}) do |t|  %>
  <%= t.hidden_field :token, value: @token %>
  <div class="form-group">
  <%= t.password_field :password, placeholder: '新しいパスワードを入力してください', max_length: 20, size: '50' %>
  </div>
  <div class="form-group">
  <%= t.password_field :password_confirmation, placeholder: '新しいパスワードを入力してください', max_length: 20, size: '50' %>
  </div>
  <div class="form-group">
  <%= t.submit 'パスワードを再設定する', class: 'btn btn-primary' %>
  </div>
<% end %>

